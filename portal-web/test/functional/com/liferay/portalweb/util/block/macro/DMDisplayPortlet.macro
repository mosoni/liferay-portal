<definition>
	<command name="configureDocumentListingsDocumentsPerPage">
		<var name="key_documentsPerPage" value="${documentsPerPage}" />

		<execute action="PGDocumentlibrarydisplayConfiguration#selectFrame" locator-key1="DOCUMENTS_AND_MEDIA_DISPLAY_IFRAME" />
		<execute action="PGDocumentlibrarydisplayConfiguration#type" locator-key1="SETUP_DOCUMENTS_LISTING_DOCUMENTS_PER_PAGE_FIELD" value1="${documentsPerPage}" />
		<execute action="PGDocumentlibrarydisplayConfiguration#assertClick" locator-key1="SAVE_BUTTON" value1="Save" />
		<execute action="PGDocumentlibrarydisplayConfiguration#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
		<execute action="PGDocumentlibrarydisplayConfiguration#selectFrame" value1="relative=top" />
	</command>

	<command name="viewPaginationControlsPG">
		<execute action="PGDocumentlibrarydisplay#assertTextEquals" locator-key1="PAGINATION_NEXT" value1="Next" />
		<execute action="PGDocumentlibrarydisplay#assertTextEquals" locator-key1="PAGINATION_PREVIOUS" value1="Previous" />
	</command>
</definition>